<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Add New Blog</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .thumb-preview {
            max-width: 200px;
            max-height: 150px;
            object-fit: cover;
            border-radius: 6px;
        }

        table td {
            vertical-align: middle;
        }
    </style>
</head>

<body class="bg-light">
    <!-- header -->
    <header>
        <div class="container">
            <div class="row p-3">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <div class="col-2">
                        <div class="logo">
                            <a href="/" class="text-dark fs-2 text-decoration-none">Blogs App</a></a>
                        </div>
                    </div>
                    <div class="col-8">
                        <ul class="list-unstyled d-flex gap-3 justify-content-end mb-0">
                            <li class="d-flex align-items-center">
                                <div class="dropdown">
                                    <a class="text-decoration-none text-dark mb-0" href="#" role="button">
                                      Home
                                    </a>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown">
                                    <a class="btn dropdown-toggle" href="/" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                      All Blogs
                                    </a>
                                    <ul class="dropdown-menu">
                                      <li><a class="dropdown-item" href="allBlogs">All Blogs</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown">
                                    <a class="btn dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                      Categories
                                    </a>
                                  
                                    <ul class="dropdown-menu">
                                      <li><a class="dropdown-item" href="#">General</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li>
                                <div class="dropdown">
                                    <a class="btn" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                      About Us
                                    </a>
                                </div>
                            </li>
                        </ul>
                    </div>
                    <div class="col-2 d-flex justify-content-end align-items-center">
                        <div style="width: 50px; height: 50px;" class="dropdown dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="/images/profile.png" alt="profile image" class="cursor-pointer img-fluid rounded-circle w-100 h-100">
                        </div>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="logout">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- main -->
    <main class="container my-4">

        <!-- Writing Page Layout -->
        <div class="row">
    
            <!-- MAIN WRITING AREA -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
    
                        <h3 class="mb-3 fw-bold">Write a New Blog</h3>
    
                        <form action="/createBlog" method="POST" enctype="multipart/form-data">
    
                            <!-- Blog Title -->
                            <input type="text" 
                                   name="title" 
                                   id="title"
                                   class="form-control form-control-lg mb-3"
                                   placeholder="Enter your blog title..." 
                                   required>
    
                            <!-- Slug (auto) -->
                            <input type="text" 
                                   name="slug" 
                                   id="slug"
                                   class="form-control mb-3"
                                   readonly
                                   placeholder="Slug will be generated automatically">
    
                            <!-- Rich Content Editor -->
                            <textarea id="contentEditor" name="content"></textarea>
    
                            <!-- Thumbnail Upload -->
                            <div class="mt-4">
                                <label class="form-label fw-semibold">Thumbnail Image</label>
                                <input type="file" name="thumbnail" id="thumbnail" class="form-control" accept="image/*" required>
                                <img id="preview" class="thumb-preview mt-2 d-none">
                            </div>
    
                            <!-- Submit -->
                            <button class="btn btn-primary mt-3">Publish Blog</button>
                            <a href="/dashboard" class="btn btn-secondary mt-3">Cancel</a>
    
                        </form>
                    </div>
                </div>
            </div>
    
            <!-- RIGHT SIDEBAR (Categories & Tags) -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-body">
    
                        <h5 class="fw-semibold mb-3">Blog Settings</h5>
    
                        <!-- Category -->
                        <label class="form-label">Category</label>
                        <select class="form-select mb-3" name="category">
                            <option>General</option>
                            <option>Tech</option>
                            <option>Lifestyle</option>
                            <option>Food</option>
                            <option>Travel</option>
                        </select>
    
                        <!-- Tags -->
                        <label class="form-label">Tags</label>
                        <input type="text" 
                               class="form-control mb-3" 
                               name="tags"
                               placeholder="comma separated tags">
    
                        <!-- Status -->
                        <label class="form-label">Status</label>
                        <select name="status" class="form-select mb-3">
                            <option value="draft">Draft</option>
                            <option value="published">Publish</option>
                        </select>
    
                    </div>
                </div>
            </div>
    
        </div>
    </main>
    
    <!-- footer -->
    <footer class="bg-dark text-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-12 d-flex">
                    <!-- //create footer -->
                    <div class="col-4">
                        <h5>About This Blog</h5>
                        <p>
                            Welcome to our blog! Here you'll find articles, stories, and insights on a variety of topics
                            written by our passionate community. Whether you're here to learn, get inspired, or share
                            your thoughts, we hope you enjoy your time here. Happy reading!
                        </p>
                    </div>
                    <div class="col-4 d-flex align-items-center justify-content-center">
                        <ul class="list-unstyled">
                            <li><a href="/" class="text-decoration-none text-white">Home</a></li>
                            <li><a href="/writeBlog" class="text-decoration-none text-white">Write a Blog</a></li>
                            <li><a href="#" class="text-decoration-none text-white">Categories</a></li>
                            <li><a href="#" class="text-decoration-none text-white">About</a></li>
                            <li><a href="#" class="text-decoration-none text-white">Contact</a></li>
                        </ul>
                    </div>
                    <div class="col-4">
                        <h5>Search by Email</h5>
                        <form action="/searchEmail" method="GET" class="mb-3">
                            <div class="input-group">
                                <input type="email" name="email" class="form-control" placeholder="Enter email"
                                    required>
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.tiny.cloud/1/he5fy0obmsihttfctbogqwxdck9sp43ifn75j2tujv1z38mt/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
    tinymce.init({
        selector: '#contentEditor',
        height: 400,
        menubar: false,
        plugins: 'lists link image code table fullscreen',
        toolbar: `
            undo redo | styles | bold italic |
            bullist numlist | blockquote |
            alignleft aligncenter alignright |
            link | table | code | fullscreen
        `,
        branding: false
    });
    </script>
    

    <script>
        // Auto slug generate
        function slugify(text) {
            return text.toLowerCase()
                .replace(/\s+/g, "-")
                .replace(/[^\w\-]+/g, "")
                .replace(/\-\-+/g, "-")
                .replace(/^-+/, "")
                .replace(/-+$/, "");
        }

        document.getElementById("title").addEventListener("input", (e) => {
            document.getElementById("slug").value = slugify(e.target.value);
        });

        // Thumbnail preview
        const fileInput = document.getElementById("thumbnail");
        const preview = document.getElementById("preview");

        fileInput.addEventListener("change", () => {
            if (fileInput.files && fileInput.files[0]) {
                const url = URL.createObjectURL(fileInput.files[0]);
                preview.src = url;
                preview.classList.remove("d-none");
            }
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>

</html>